<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>ROOT</param-name>
        <param-value>http://localhost:8084/Project</param-value>
    </context-param>
    <servlet>
        <servlet-name>PublisherView</servlet-name>
        <jsp-file>/WEB-INF/displaypublisher.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>FileView</servlet-name>
        <jsp-file>/WEB-INF/displayfile.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminMemberList</servlet-name>
        <jsp-file>/WEB-INF/AdminMemberList.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminPublisherList</servlet-name>
        <jsp-file>/WEB-INF/AdminPublisherList.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AdminCommentList</servlet-name>
        <jsp-file>/WEB-INF/AdminCommentList.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublisherView</servlet-name>
        <url-pattern>/publisher.view</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CommentView</servlet-name>
        <jsp-file>/WEB-INF/displaycomment.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentView</servlet-name>
        <url-pattern>/comment.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileView</servlet-name>
        <url-pattern>/file.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminMemberList</servlet-name>
        <url-pattern>/adminmember.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPublisherList</servlet-name>
        <url-pattern>/adminpublish.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminCommentList</servlet-name>
        <url-pattern>/admincomment.view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
